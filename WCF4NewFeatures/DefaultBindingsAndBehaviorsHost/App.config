<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding receiveTimeout="005"/>
        <!--equivalent to-->
        <!--<binding receiveTimeout="005" name=""/>-->
      </basicHttpBinding>
    </bindings>
    <services>
      <service name="DefaultBindingsAndBehavior.SomeService">
        <endpoint address="/meta" binding="mexHttpBinding" contract="IMetadataExchange"/>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:12321"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors >
        <behavior>
          <serviceMetadata httpGetEnabled="True"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>